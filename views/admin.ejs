<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Portal</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f9;
            color: #333;
            padding: 20px;
        }

        h1 {
            text-align: center;
            font-size: 28px;
            color: #2980b9;
            margin-bottom: 40px;
        }

        a {
            text-decoration: none;
            color: inherit;
        }

        .title {
            width: 80%;
            margin: 20px auto;
            padding: 20px;
            border: 2px solid #2980b9;
            border-radius: 10px;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .title:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

        .title p {
            font-size: 18px;
            margin-bottom: 10px;
        }

        .title p strong {
            color: #2c3e50;
        }

        /* Styling for the button */
        .button-container {
            text-align: left; /* Center the button */
            margin-left: 10%;
            margin-bottom: 30px; /* Add some space below the button */
        }

        .accepted-button {
            background-color: #2980b9; /* Button color */
            color: white; /* Text color */
            font-size: 16px; /* Font size */
            padding: 10px 20px; /* Padding */
            border: none; /* No border */
            border-radius: 5px; /* Rounded corners */
            cursor: pointer; /* Pointer cursor on hover */
            transition: background-color 0.3s ease, transform 0.3s ease; /* Transition for hover effects */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Shadow effect */
        }

        .accepted-button:hover {
            background-color: #21618c; /* Darker color on hover */
            transform: translateY(-2px); /* Slightly raise button on hover */
        }

        @media (max-width: 768px) {
            .title {
                width: 100%;
            }

            h1 {
                font-size: 24px;
            }

            .title p {
                font-size: 16px;
            }
        }
    </style>
</head>
<body>

    <h1>Pending Students For Document Verification</h1>
    <div class="button-container">
        <form action="/admin/acceptedStudents" method="get">
            <button type="submit" class="accepted-button">Accepted Students</button>
        </form>
    </div>
    
    <% for (let data of datas) { %>
        <a href="/admin/<%= data.id %>">
            <div class="title">
                <p><strong>Name:</strong> <%= data.firstname %> <%= data.Lastname %></p>
                <p><strong>Application Number:</strong> <%= data.applicationnum %></p>
                <p><strong>Email:</strong> <%= data.email %></p>
            </div>
        </a>
    <% } %>

</body>
</html>
