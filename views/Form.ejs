<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Bootstrap Multi-Step Form</title>
  <link href="https://fonts.googleapis.com/css?family=Poppins:400,600&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="chat.css">
</head>
<body>

<header class="header">
  <h1 class="header__title">Multi Steps Form Animations</h1>
</header>

<div class="content">
  <div class="content__inner">
    <div class="container overflow-hidden">
      <div class="multisteps-form">
        
        <div class="row mt-4">
          <div class="col-12 col-lg-8 ms-auto me-auto mb-4">
            <div class="multisteps-form__progress">
              <button class="multisteps-form__progress-btn js-active" type="button" title="User Info">Basic Info</button>
              <button class="multisteps-form__progress-btn" type="button" title="Address">Address</button>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-12 col-lg-8 mx-auto">
            <!-- Start form tag here -->
            <form action="/home/Userinfo" method="post" enctype="multipart/form-data" class="multisteps-form__form">
                <!-- Basic Info Panel -->
                <div class="multisteps-form__panel shadow p-4 rounded bg-white js-active" data-animation="scaleIn">
                  <h3 class="multisteps-form__title">Your User Info</h3>
                  <div class="multisteps-form__content">
                    <div class="row mt-4">
                      <div class="col-12 col-sm-6">
                        <div class="form-floating">
                          <input type="text" class="form-control" id="floatingFirstname" placeholder="First name" name="firstname">
                          <label for="floatingFirstname">First name</label>
                        </div>
                      </div>
                      <div class="col-12 col-sm-6 mt-4 mt-sm-0">
                        <div class="form-floating">
                          <input type="text" class="form-control" id="floatingLastname" placeholder="Last name" name="lastname">
                          <label for="floatingLastname">Last name</label>
                        </div>
                      </div>
                    </div>
              
                    <div class="row mt-4">
                      <div class="col-12 col-sm-6">
                        <div class="form-floating">
                          <input type="email" class="multisteps-form__input form-control" id="floatingemail" placeholder="Email" name="email">
                          <label for="floatingemail">Email</label>
                        </div>
                      </div>
                      <div class="col-12 col-sm-6 mt-4 mt-sm-0">
                        <div class="form-floating">
                          <input type="number" class="multisteps-form__input form-control" id="floatingAdhaarno" placeholder="Aadhaar no" name="aadhaarnum">
                          <label for="floatingAdhaarno">Aadhaar no</label>
                        </div>
                      </div>
                    </div>
              
                    <div class="row mt-4">
                      <div class="col-12 col-sm-6">
                        <div class="form-floating">
                          <input type="number" class="multisteps-form__input form-control" id="floatingMobileno" placeholder="Mobile number" name="mobilenum">
                          <label for="floatingMobileno">Mobile number</label>
                        </div>
                      </div>
                      <div class="col-12 col-sm-6 mt-4 mt-sm-0">
                        <div class="form-floating">
                          <input type="number" class="multisteps-form__input form-control" id="floatingAltmobno" placeholder="Alt mobile number" name="altmobilenum">
                          <label for="floatingAltmobno">Alt Mobile no</label>
                        </div>
                      </div>
                    </div>
              
                    <div class="d-flex mt-4">
                      <button class="btn btn-primary ms-auto js-btn-next" type="button" title="Next">Next</button>
                    </div>
                  </div>
                </div>
              
                <!-- Address Panel -->
                <div class="multisteps-form__panel shadow p-4 rounded bg-white" data-animation="scaleIn">
                  <h3 class="multisteps-form__title">Your Address</h3>
                  <div class="multisteps-form__content">
                    <div class="row mt-4">
                      <div class="col-12">
                        <div class="form-floating">
                          <input type="number" class="form-control" id="floatingJEEApplNo" placeholder="JEE Appl no" name="applicationnum">
                          <label for="floatingJEEApplNo">JEE Application number</label>
                        </div>
                      </div>
                    </div>
                    <div class="form-floating mt-4">
                      <select class="form-select" id="floatingCourseSelect" aria-label="Floating label select example" name="course">
                        <option selected>Select course</option>
                        <option value="1">Computer Science Engineering</option>
                        <option value="2">Electronics & Communication Engineering</option>
                      </select>
                      <label for="floatingCourseSelect">Course opted</label>
                    </div>
              
                    <div class="d-flex mt-4">
                      <button class="btn btn-primary js-btn-prev" type="button" title="Prev">Prev</button>
                      <button class="btn btn-success ms-auto" type="submit" title="Send">Submit</button>
                    </div>
                  </div>
                </div>
              </form>
              
           <!-- tag here --> 
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="chat.js"></script>

</body>
</html>
